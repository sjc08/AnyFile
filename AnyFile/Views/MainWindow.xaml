<Window x:Class="AnyFile.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:AnyFile.Views"
        xmlns:converters="clr-namespace:AnyFile.Converters"
        xmlns:viewModels="clr-namespace:AnyFile.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider x:Key="ViewModeEnum" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:ViewMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <converters:EnumToDisplayNameConverter x:Key="EnumToDisplayNameConverter" />
        <converters:PathToThumbnailConverter x:Key="PathToThumbnailConverter" />
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <ComboBox Margin="3"
                      ItemsSource="{Binding Source={StaticResource ViewModeEnum}}"
                      SelectedItem="{Binding CurrentViewMode}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayNameConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBox Margin="3" Text="{Binding CurrentPath, Mode=OneWay}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter"
                                Command="{Binding EnterCommand}"
                                CommandParameter="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" />
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>
        <ListView Margin="3" ItemsSource="{Binding FileItems}">
            <ListView.Style>
                <Style TargetType="ListView">
                    <Style.Triggers>
                        <!-- 视图 -->
                        <DataTrigger Binding="{Binding CurrentViewMode}" Value="Detail">
                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="View">
                                <Setter.Value>
                                    <GridView>
                                        <GridViewColumn Header="路径" DisplayMemberBinding="{Binding FullName}" />
                                        <GridViewColumn Header="文件名" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="大小" DisplayMemberBinding="{Binding Length}" />
                                    </GridView>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <!-- 视图 -->
                        <DataTrigger Binding="{Binding CurrentViewMode}" Value="Thumbnail">
                            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility">
                                <Setter.Value>Disabled</Setter.Value>
                            </Setter>
                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ItemContainerStyle">
                                <Setter.Value>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Margin" Value="5" />
                                    </Style>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Width="100" ToolTip="{Binding Name}">
                                            <Image Height="100" Source="{Binding FullName, Converter={StaticResource PathToThumbnailConverter}}" />
                                            <hc:RunningBlock MaxHeight="30" BorderThickness="0" Padding="0" Orientation="Vertical" Runaway="False">
                                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap" TextAlignment="Center" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=hc:RunningBlock}}" />
                                            </hc:RunningBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>
        </ListView>
    </DockPanel>
</Window>
